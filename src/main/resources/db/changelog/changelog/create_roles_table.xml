		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.9.xsd">
    <changeSet id="04" author="gsaville">
        <createTable tableName="roles">
            <column name="roleId" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_roleId"/>
            </column>
            <column name="role" type="varchar(20)"/>
        </createTable>

        <insert tableName="roles">
            <column name="roleId" value="1"/>
            <column name="role" value="ADMIN"/>
        </insert>
        <insert tableName="roles">
            <column name="roleId" value="2"/>
            <column name="role" value="PROFESSOR"/>
        </insert>
        <insert tableName="roles">
            <column name="roleId" value="3"/>
            <column name="role" value="TRAINER"/>
        </insert>

    </changeSet>
</databaseChangeLog>